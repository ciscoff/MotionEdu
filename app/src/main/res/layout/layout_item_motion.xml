<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:toot="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <k.s.yarlykov.motionedu.custom.ParallaxListItem
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/motionLayout"
        app:layoutDescription="@xml/motion_scene_parallax"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RvEduActivity">

        <ImageView
            android:id="@+id/ivMotion"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            toot:src="@drawable/bkg_01_jan"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            toot:text="@string/motion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivMotion"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </k.s.yarlykov.motionedu.custom.ParallaxListItem>

</com.google.android.material.card.MaterialCardView>